# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json}]
charset = utf-8
end_of_line = lf

[{package.json,*.yml,*.json,*.cson,.*}]
indent_style = space
indent_size = 2

[*.{js,html}]
indent_style = space
indent_size = 4
