{
  "defaultProtocol": {
    "type": "string",
    "default": "SMTP",
    "enum": ["SMTP", "Gmail"],
    "order": 1
  },
  "smtp": {
    "title": "SMTP",
    "type": "object",
    "order": 2,
    "collapsed": "true",
    "properties": {
      "host": {
        "title": "Host",
        "type": "string",
        "default": "localhost",
        "order": 1
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "default": 25,
        "order": 2
      },
      "auth": {
        "type": "object",
        "order": 3,
        "properties": {
          "user": {
            "title": "Username",
            "type": "string",
            "default": "username",
            "order": 1
          },
          "pass": {
            "title": "Password",
            "type": "string",
            "default": "password",
            "order": 2
          }
        }
      }
    }
  },
  "gmail": {
    "type": "object",
    "order": 3,
    "collapsed": "true",
    "properties": {
      "email": {
        "title": "Email",
        "type": "string",
        "default": "ilovepalladium00@gmail.com"
      },
      "pass": {
        "title": "Password",
        "type": "string",
        "default": "password"
      }
    }
  },
  "mailgun": {
    "type": "object",
    "order": 4,
    "collapsed": "true",
    "properties": {
      "api_key": {
        "title": "Mailgun API key",
        "type": "string",
        "default": "key-12345abcd"
      },
      "domain": {
        "type": "string",
        "default": "mailgun.com"
      }
    }
  }
}
